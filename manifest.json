{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching codesolutions2.github.io.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*codesolutions2.github.io/*"],
      "js": ["borderify.js"]
    }
  ]
}
